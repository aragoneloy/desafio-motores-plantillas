<div class="container m-5">
        <h3>Chat</h3>
        <h4 id="porcentajeCompresion"></h4>
        <form id="chat">
            <div class="form-group">
                <label for="id">Email:</label>
                <input type="email" class="form-control" id="id" aria-describedby="userComment" required>
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" aria-describedby="userComment" required>
                <label for="apellido">Apellido</label>
                <input type="text" class="form-control" id="apellido" aria-describedby="userComment" required>
                <label for="edad">Edad</label>
                <input type="text" class="form-control" id="edad" aria-describedby="userComment" required>
                <label for="alias">Alias</label>
                <input type="text" class="form-control" id="alias" aria-describedby="userComment" required>
                <label for="avatar">Avatar URL</label>
                <input type="text" class="form-control" id="avatar" aria-describedby="userComment" required>
                
            </div>
            <div class="form-group">
                <label for="contenidoMensaje">Mensaje:</label>
                <textarea class="form-control" id="contenidoMensaje" rows="3" required></textarea>
            </div>    
            <button class="btn btn-success" onclick="enviarMensaje()">Enviar</button>
        </form>
        <hr>
        <div id="historial">
            
            <!-- aqui se renderizan los mensajes recibidos por parte del server -->
        </div>
</div>
